{
	"tasks": {
		"start": "deno run --allow-net --allow-read main.tsx",
		"dev": "deno run --allow-net --allow-read --watch main.tsx",
		"check": "deno fmt --check && deno lint && deno check --unstable **/*.ts && deno check --unstable **/*.tsx",
		"test": "deno test --unstable"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 2,
		"singleQuote": false,
		"proseWrap": "preserve",
		"semiColons": true
	},
	"lint": {
		"rules": {
			"tags": [
				"recommended"
			],
			"include": [
				"adjacent-overload-signatures",
				"ban-ts-comment",
				"camelcase",
				"eqeqeq",
				"default-param-last"
			]
		}
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx"
	},
	"imports": {
		"hono/": "https://deno.land/x/hono@v4.0.5/",
		"hono/jsx/jsx-runtime": "https://deno.land/x/hono@v4.0.5/jsx/jsx-runtime.ts",
		"valibot/": "https://deno.land/x/valibot@v0.29.0/",
		"@hono/valibot-validator": "https://esm.sh/@hono/valibot-validator@0.2.2/",
		"dotenv/": "https://deno.land/std@0.218.2/dotenv/",
		"metapatcher": "npm:metapatcher@4.0.5"
	}
}
