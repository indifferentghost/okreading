{
	"tasks": {
		"start": "deno run --allow-net main.tsx",
		"dev": "deno run --allow-net --watch main.tsx",
		"check": "deno fmt --check && deno lint && deno check --unstable **/*.ts && deno check --unstable **/*.tsx",
		"test": "deno test --unstable"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 2,
		"singleQuote": false,
		"proseWrap": "preserve",
		"semiColons": true
	},
	"lint": {
		"rules": {
			"tags": [
				"recommended"
			],
			"include": [
				"adjacent-overload-signatures",
				"ban-ts-comment",
				"camelcase",
				"eqeqeq",
				"default-param-last"
			]
		}
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx"
	},
	"imports": {
		"hono/jsx/jsx-runtime": "https://deno.land/x/hono@v4.0.5/jsx/jsx-runtime.ts",
		"hono/": "https://deno.land/x/hono@v4.0.5/",
		"valibot/": "https://deno.land/x/valibot@v0.29.0/"
	}
}
